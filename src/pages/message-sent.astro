---
import Hero from "../components/Hero.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout title="Message Sent" description="Message sent to Louise Findlay">
  <Hero
    title="Message Sent Successfully"
    tagline="Your message has been sent successfully. I look forward to reading it."
  />
  <div class="center">
    <Icon name="mdi:email-check" width="128" height="128" />
    <a href="/" class="button">
      <Icon name="mdi:arrow-left" width="64" height="64" />
      Go back home
    </a>
  </div>
</BaseLayout>

<style is:inline>
  .tagline {
    margin: 7.5vh 0;
  }

  .center {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .button {
    display: inline-flex;
    align-items: center;
    padding: 2.5% 5%;
    background: var(--accent-regular);
    color: var(--accent-text-over);
    border-radius: 20px;
    font-size: var(--text-lg);
    text-align: center;
    margin: 7.5vh 0;
  }

  .button:hover {
    background: var(--accent-light);
  }

  .button svg {
    margin-right: 2.5%;
  }
</style>
